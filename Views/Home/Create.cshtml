
@model BookShop.Models.Book
<h2>Add Book</h2>

<form method="post" asp-controller="Home" asp-action="PostBook">
    <input asp-for="Title" placeholder="Enter book title" required/>
    <input asp-for="Author" placeholder="Enter book author" required/>
    <input asp-for="Year" placeholder="Enter book year" required/>
    <button type="submit">Add</button>
</form>
